<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="339" Width="414.5">
    <Grid>
        <TextBox x:Name="txtNickname" HorizontalAlignment="Left" Height="22" Margin="145,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TxtNickname_TextChanged"/>
        <Label Content="Nickname:" HorizontalAlignment="Left" Margin="145,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Left" Margin="145,167,0,0" VerticalAlignment="Top" Width="120" Height="61" IsEnabled="False" Click="btnLogin_Click"/>

    </Grid>
</Window>
